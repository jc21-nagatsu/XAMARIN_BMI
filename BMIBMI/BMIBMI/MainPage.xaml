<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BMIBMI"
             x:Class="BMIBMI.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Entry Placeholder="身長をメートル単位で入力してください" 
               x:Name="EntryHeight"/>
        
        <Entry Placeholder="体重をキログラム単位で入力してください" 
               x:Name="EntryWeight"/>
        
        <Button Text="計算" 
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                x:Name="ButtonBMI"/>
        
        <Label Text="ここに計算結果が出ます" 
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="Center"
               Font="30"
               x:Name="LabelResult"/>
        
        <Button Text="計算(別ページ)"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                x:Name="ButtonBMI2" 
                Clicked="ButtonBmiClickEvent2"/>
    </StackLayout>

</ContentPage>
